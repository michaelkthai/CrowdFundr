<!-- Nav Dropdown Menu -->

<% if current_user %>
<ul id="dropdown1" class="dropdown-content">
  <li><a href="<%= user_path(current_user.id) %>">Profile</a></li>
  <li><a href="#">Projects</a></li>
  <li class="divider"></li>
  <li><%= link_to "Logout", :logout, method: :post %></li>
</ul>
<% end %>

<!-- Nav -->

<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo">Crowdfundr</a>

    <ul class="right hide-on-med-and-down">
      <% if current_user %>

      <li><a id="browse-projects-link" href="">Browse Projects</a></li>
        <li><%= link_to "Create a Project", new_project_path %></li>
        <!-- Dropdown Trigger -->
        <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Hi, <%= current_user.first_name %>!<i class="material-icons right">arrow_drop_down</i></a></li>

      <% else %>
        <li><a href="#">Browse Projects</a></li>
        <li><%= link_to "Register", new_user_path %></li>
        <li><%= link_to "Log In", :login %></li>
      <% end %>

    </ul>
  </div>
</nav>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
